#![no_std]
use soroban_sdk::{contract, contractimpl, Address, Env, Symbol};

#[contract]
pub struct FunctionPolicy;

#[contractimpl]
impl FunctionPolicy {
    pub fn check_policy(env: Env, source: Address, function_name: Symbol) -> bool {
        match function_name.to_string().as_str() {
            {{#each method_configs}}
            "{{name}}" => {{allowed}},
            {{/each}}
            _ => false,
        }
    }
} 